{
  "extends": ["./ts-configs/base.json", "./ts-configs/verbatim.json", "./ts-configs/extra-strict.json"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
